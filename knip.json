{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "src/app/**/page.tsx",
    "src/app/**/layout.tsx",
    "src/app/**/route.ts",
    "scripts/**/*.ts"
  ],
  "project": ["src/**/*.ts", "src/**/*.tsx"],
  "ignore": ["**/*.d.ts"],
  "ignoreDependencies": ["tailwindcss-animate"],
  "next": {
    "entry": [
      "src/app/**/{page,layout,template,error,global-error,not-found,route}.{js,jsx,ts,tsx}",
      "src/instrumentation.{js,ts}",
      "src/middleware.{js,ts}"
    ]
  }
}
